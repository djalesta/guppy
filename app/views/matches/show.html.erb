<% chat_user = @match.user == current_user ? @match.fish.user : @match.user %>
<h2 style="text-align:center; font-weight:700; margin-bottom:22px;">
  Chat with
  <%= link_to chat_user.username, public_user_profile_path(chat_user),
        style: "font-weight:700; color:#fff; text-underline-offset:3px;" %>
</h2>

<%= turbo_stream_from "match_#{@match.id}_messages" %>
<div id="messages" style="background:#fff; border-radius:18px; min-height:350px; max-height:64vh; overflow-y:auto; margin-bottom:12px; padding:14px;">
  <% @match.messages.each do |message| %>
  <% if message.user == current_user %>

      <div style="display:flex; margin-bottom:10px; justify-content:flex-end;">
        <div style="min-width:70px; max-width:70vw; border-radius:18px;
          background: #2D8BA5;
          color:#fff; align-self:flex-end;
          border-top-right-radius:6px; border-bottom-right-radius:22px;
          box-shadow:0 1px 4px rgba(45,139,165,0.08); padding:10px 16px;">
          <div style="display:flex; align-items:center; margin-bottom:2px;">
            <span style="font-weight:700;font-size:1em;color:#fff; margin-right:10px;">
              <%= message.user.username %>
            </span>
            <span style="font-size:0.89em; color:#fff; font-weight:500;">
              <%= message.created_at.strftime("%d %b %H:%M") %>
            </span>
          </div>
          <div style="word-break:break-word;color:#fff;">
            <%= message.content %>
          </div>
        </div>
      </div>
    <% else %>

      <div style="display:flex; margin-bottom:10px; justify-content:flex-start;">
        <div style="min-width:70px; max-width:70vw; border-radius:18px;
          background:#94D2E3; color:#222; align-self:flex-start;
          border:1.5px solid #2D8BA5;
          border-top-left-radius:6px; border-bottom-left-radius:22px;
          box-shadow:0 1px 4px rgba(45,139,165,0.08); padding:10px 16px;">
          <div style="display:flex; align-items:center; margin-bottom:2px;">
            <span style="font-weight:700;font-size:1em;color:#2D8BA5; margin-right:10px;">
              <%= message.user.username %>
            </span>
            <span style="font-size:0.89em; color:#2D8BA5; font-weight:500;">
              <%= message.created_at.strftime("%d %b %H:%M") %>
            </span>
          </div>
          <div style="word-break:break-word;color:#222;">
            <%= message.content %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= simple_form_for [@match, @message],
  html: {
    class: "message-form d-flex align-items-center mt-3",
    style: "gap:8px; margin-bottom:10px;"
  },
  data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } do |f| %>
  <%= f.text_area :content,
    placeholder: "Write a message...",
    class: "message-input",
    rows: 4,
    style: "border-radius:16px; background:#f8fdff; width:100%; font-size:1.14em; padding:14px 18px; flex:1 1 0; border:none; min-height:80px; resize:vertical;"
  %>
  <button type="submit"
    style="background:#2D8BA5; border-radius:16px; border:none; color:#fff; min-width:60px; height:72px; font-size:1.5em; flex-shrink:0; display: flex; align-items: center; justify-content: center;">
    <i class="fa-solid fa-share" style="font-size:22px; color: #fff !important;"></i>
  </button>
<% end %>
<div style="height: 70px;"></div>
<script>
function scrollMessagesToBottom() {
  var container = document.getElementById('messages');
  if (container) {
    container.scrollTop = container.scrollHeight;
  }
}

document.addEventListener('DOMContentLoaded', scrollMessagesToBottom);

document.addEventListener('turbo:load', scrollMessagesToBottom);
document.addEventListener('turbo:frame-load', scrollMessagesToBottom);

document.addEventListener('turbo:before-stream-render', function(e){
  var container = document.getElementById('messages');
  if (container) {
    setTimeout(function(){
      container.scrollTop = container.scrollHeight;
    }, 50);
  }
});
document.addEventListener('DOMContentLoaded', function() {
  var input = document.querySelector('.message-input input, .message-input textarea, input[name="message[content]"], textarea[name="message[content]"]');
  var form = input && input.form;

  if (input && form) {
    input.addEventListener('keydown', function(e) {

      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        form.querySelector('input[type="submit"],button[type="submit"]')?.click();
      }
    });
  }
});

</script>
