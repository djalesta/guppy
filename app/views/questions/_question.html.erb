<% fish = local_assigns[:fish] || nil %>
<div id="<%= dom_id(question) %>" class="question">
  <%= turbo_stream_from dom_id(question) %>

  <p class="user-question"><%= question.user_question %></p>
  <p class="ai-answer"><%= question.ai_answer || "..." %></p>
  <% if fish %>
  <div>
    <%= fish.name %>
    <%= link_to "View Fish", fish_path(fish), style: "color: red;" %>
  </div>
  <% end %>
</div>

