<div class="d-flex justify-content-center">
<div class="container" style="max-width: 900px;">

  <h1 class="mb-4 text-center">My Fish Tank</h1>
  <%= link_to "Upload New Fish", new_user_fish_path, class: "primarybutton" %>

  <% @fish.each do |fish| %>
    <div class="card mb-2">
      <div class="card-body">
        <div class="d-flex align-items-center">

          <div class="me-3">
            <% if fish.photos.attached? %>
              <%= image_tag fish.photos.first, style: "width: 90px; height: 90px; object-fit: cover; border-radius: 50%; border: 2px solid #2D8BA5;" %>
            <% else %>
              <div style="width: 70px; height: 70px; border-radius: 50%; background: #e0e0e0; display: flex; align-items: center; justify-content: center; color: #aaa;">
                <i class="fa-solid fa-fish fa-2x"></i>
              </div>
            <% end %>
          </div>

          <div class="flex-grow-1">
            <h5 class="mb-1"><%= fish.name %></h5>
            <p class="mb-1"><%= fish.fish_description %></p>
            <div class="mb-1 small">
              <strong>Color:</strong> <%= fish.color %> &nbsp;|&nbsp;
              <strong>Length:</strong> <%= fish.length %> cm &nbsp;|&nbsp;
              <strong>Sex:</strong> <%= fish.sex %> &nbsp;|&nbsp;
              <strong>Latitude:</strong> <%= fish.latitude %> &nbsp;|&nbsp;
              <strong>Longitude:</strong> <%= fish.longitude %> &nbsp;|&nbsp;
              <strong>Available:</strong> <%= fish.availability ? "Yes" : "No" %>
            </div>

            <div class="d-flex gap-2 mt-2">
              <%= link_to "Edit", edit_user_fish_path(fish), class: "btn btn-sm", style: "background-color: #2D8BA5; color: white; border-radius: 20px; padding: 6px 35px;" %>
              <%= button_to "Remove", user_fish_path(fish), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-sm", style: "background-color: #2D8BA5; color: white; border-radius: 20px; padding: 6px 20px;" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div style="height: 100px;"></div>
  </div>
</div>
