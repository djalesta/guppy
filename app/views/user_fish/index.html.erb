<div class="d-flex justify-content-center">
<div class="container" style="max-width: 900px;">

  <h1 class="mb-4 text-center">My fish tank</h1>
  <%= link_to "Upload new fish", new_user_fish_path, class: "primarybutton", style: "margin-bottom: 20px;" %>

  <% @fish.each do |fish| %>
  <%= link_to fish_path(fish), style: "text-decoration: none; color: inherit;" do %>
    <div class="card mb-2" style="border-radius: 10px; ">
      <div class="card-body">
        <div class="d-flex align-items-center" style="border-radius: 10px; max-width: 100%; overflow: hidden; box-sizing: border-box;">

          <div class="me-3">
            <% if fish.photos.attached? %>
              <%= image_tag fish.photos.first, style: "width: 100px; height: 80px; object-fit: cover; border-radius: 20%; border: 2px solid #2D8BA5;" %>
            <% else %>
              <div style="width: 70px; height: 70px; border-radius: 50%; background: #e0e0e0; display: flex; align-items: center; justify-content: center; color: #aaa;">
                <i class="fa-solid fa-fish fa-2x"></i>
              </div>
            <% end %>
          </div>
           <% end %>

          <div class="flex-grow-1">
            <h5 class="mb-1"><%= fish.name %></h5>

            <div class="mb-1 small">
              <p>
                    <em><%= fish.fish_description %> <br></em>
                    <p></p>
                    <i class="fa-solid fa-venus-mars" style="color: #2d8ba5 !important;"></i>
                    <%= fish.sex.capitalize %>
                    <i class="fa-solid fa-palette" style="color: #2d8ba5 !important;"></i>
                    <%= fish.color.capitalize %> <br>
                    <i class="fa-solid fa-ruler" style="color: #2d8ba5 !important;"></i>
                    <%= fish.length %> cm
                    <b>Available?</b>
                    <% if fish.availability == true %>
                      ðŸŸ¢
                    <% else %>
                      ðŸ”´
                    <% end %>
                </p>
            </div>

            <div class="d-flex gap-2 mt-2">
              <%= link_to "Edit", edit_user_fish_path(fish), class: "btn btn-sm", style: "background-color: #2D8BA5; color: white; border-radius: 20px; padding: 6px 35px;" %>
              <%= button_to "Remove", user_fish_path(fish), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-sm", style: "background-color: #2D8BA5; color: white; border-radius: 20px; padding: 6px 20px;" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div style="height: 100px;"></div>
  </div>
</div>
